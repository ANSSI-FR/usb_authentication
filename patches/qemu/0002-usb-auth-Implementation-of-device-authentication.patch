+struct UsbAuthState{
+  USBDevice dev;
+  USBEndpoint *intr;
+  uint32_t usb_version;
+  slot_t slots[USB_AUTH_MAX_SLOT];
+  // Request state variables
+  uint8_t req_slot_index;
+  uint16_t req_slot_offset;
+  uint16_t req_slot_length;
+  uint8_t challenge[USB_AUTH_CHALL_SIZE];
+};
