+/**
+ * Represent a device authentication key slot
+ */
+typedef struct slot {
+  bool initialized;
+  size_t cert_length;
+  psa_key_id_t key; /**< Private signature key */
+  uint8_t cert[USB_AUTH_CERT_SIZE]; /**< Certificate chain */
+  uint8_t digest[USB_AUTH_DIGEST_SIZE]; /**< Certificate chain digest */
+} slot_t;
